<div class="container w-75">
  <%= simple_form_for [@cocktail, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
  <br>
    <%= f.button :submit, class: "custom-button mb-2" %>
    <br>
    <br>
    <p><%= link_to "Go back", cocktails_path, class: "custom-button" %></p>
  <% end %>
</div>
